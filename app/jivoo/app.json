{
  "name": "Jivoo",
  "version": "0.15-dev-6",
  "website": "http://jivoo.org",
  "defaultLanguage": "en",
  "minPhpVersion": "5.2.0",
  "sessionPrefix": "jivoo_",
  "extensions": ["jquery", "jqueryui", "html5shiv", "respond", "markdown"],
  "import": [
    "Jivoo/Core",
    "Jivoo/Routing",
    "Jivoo/Assets",
    "Jivoo/View",
    "Jivoo/Controllers",
    "Jivoo/Setup",
    "Jivoo/Models",
    "Jivoo/Content",
    "Jivoo/Helpers",
    "Jivoo/Databases",
    "Jivoo/Migrations",
    "Jivoo/ActiveModels",
    "Jivoo/AccessControl",
    "Jivoo/Administration",
    "Jivoo/Extensions",
    "Jivoo/Themes",
    "Jivoo/Widgets"
  ],
  "setup": [
    "Setup::Database::selectDriver",
    "Setup::Database::setupDriver",
    "Setup::Auth::createUser"
  ],
  "listeners": [
    "PageRouting",
    "PostRouting",
    "AdminMenu"
  ],
  "defaultConfig": {
    "site": {
      "title": "Jivoo",
      "subtitle": "My Jivoo website"
    },
    "blog": {
      "fancyPermalinks": true,
      "permalink": "%year%/%month%/%name%",
      "comments": {
        "sorting": "desc",
        "childSorting": "asc",
        "display": "thread",
        "levelLimit": 2,
        "editor": {
          "name": "MarkdownEditor"
        }
      },
      "commentingDefault": true,
      "anonymousCommenting": false,
      "commentApproval": false,
      "editor": { "name": "MarkdownEditor" }
    }
  }
}
